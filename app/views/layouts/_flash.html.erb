<% if notice %>
  <div class="alert alert-info"><%= notice %>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
   </div>
<% elsif alert %>
  <div class="alert alert-warning"><%= alert %>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
   </div>
<% end %>