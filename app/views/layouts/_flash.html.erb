<% if notice %>
  <div class="alert alert-info alert-dismissable"><%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="close">&times;</button>
  </div>
<% elsif alert %>
  <div class="alert alert-warning alert-dismissable"><%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="close">&times;</button>
  </div>
<% end %>

<% if notice %>
  <div class="alert alert-info"><%= notice %>
    <button type="button" class="btn-close" aria-label="閉じる"></button>
  </div>
<% elsif alert %>
  <div class="alert alert-warning alert-dismissible fade show"><%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>