<% if notice %>
  <div class="alert alert-info alert-dismissible fade show" role="alert"><%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="close">&times;</button>
  </div>
<% elsif alert %>
  <div class="alert alert-warning alert-dismissable"><%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="close">&times;</button>
  </div>
  <div class="alert alert-warning alert-dismissible fade show" role="alert"><%= alert %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </button>
  </div>
<% end %>