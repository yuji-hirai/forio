<%= render "users/shared/error_messages", resource: resource %>

<%= form_with model: resource, scope: resource_name, url: registration_path(resource_name), id: 'new_user', class: 'new_user', local: true do |f| %>
  <section class="d-flex align-items-center section-image overlay-soft-dark">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 d-flex align-items-center justify-content-center">
          <div class="signin-inner my-4 my-lg-0 bg-white shadow-soft border rounded border-gray-300 p-4 p-lg-5 w-100 fmxw-500">
            <div class="text-center text-md-center mb-4 mt-md-0">
              <h1 class="mb-0 h3">新規登録</h1>
            </div>
            <form action="#">
              <div class="form-group mb-3">
                <%= f.label :name %>
                <div class="input-group">
                  <span class="input-group-text" id="basic-addon3"><span class="fas fa-file-signature"></span></span>
                  <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "name", :required => true %>
                </div>
              </div>
              <div class="form-group mb-3">
                <%= f.label :email %>
                <div class="input-group">
                  <span class="input-group-text" id="basic-addon3"><span class="fas fa-envelope"></span></span>
                  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "example@company.com", :required => true %>
                </div>
              </div>
              <div class="form-group mb-3">
                <%= f.label :password %>
                <div class="input-group">
                  <span class="input-group-text" id="basic-addon4"><span class="fas fa-unlock-alt"></span></span>
                    <%= f.password_field :password, class: 'form-control', placeholder: "#{ @minimum_password_length } characters minimum", :required => true %>
                </div>
              </div>
              <div class="form-group mb-3">
                <%= f.label :password_confirmation %>
                <div class="input-group">
                  <span class="input-group-text" id="basic-addon5"><span class="fas fa-unlock-alt"></span></span>
                  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "confirm password", :required => true %>
                </div>
              </div>
              <div class="actions">
                <%= f.submit "登録", class: 'sns-button various-button' %>
              </div>
            </form>
            <div class="mt-3 mb-4 text-center">
              <span class="fw-normal">or</span>
            </div>
            <%= render "users/sns_login" %>
            <div class="d-flex justify-content-center align-items-center mt-4">
              <span class="fw-normal">
                すでに登録済みの方はこちら
                <a href="<%= new_user_session_path %>" class="fw-bold text-underline">Login here</a>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>